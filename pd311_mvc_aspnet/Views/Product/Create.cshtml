@model CreateProductVM

<div style="width: 40%; margin: 0 auto; border: 2px solid black; padding: 10px; border-radius: 10px;">
    <h1 style="text-align: center">Створення товару</h1>
    <form asp-action="create" method="post" style="margin: 15px 0" enctype="multipart/form-data">
        <div class="mb-3 row">
            <label for="name" class="col-sm-2 col-form-label">Назва</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="Product.Name">
            </div>
        </div>
        <div class="mb-3 row">
            <label for="description" class="col-sm-2 col-form-label">Опис</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="Product.Description">
            </div>
        </div>
        <div class="mb-3 row">
            <label for="price" class="col-sm-2 col-form-label">Ціна</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" asp-for="Product.Price">
            </div>
        </div>
        <div class="mb-3 row">
            <label for="amount" class="col-sm-2 col-form-label">Кількість</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" asp-for="Product.Amount">
            </div>
        </div>
        <div class="mb-3 row">
            <label for="image" class="col-sm-2 col-form-label">Картинка</label>
            <div class="col-sm-10">
                <input type="file" class="form-control" asp-for="File">
            </div>
        </div>
        <div class="mb-3 row">
            <label for="category" class="col-sm-2 col-form-label">Категорія</label>
            <div class="col-sm-10">
                <select class="form-select" asp-for="Product.CategoryId" asp-items="@Model.Categories">
                </select>
            </div>
        </div>
        <div style="margin: 15px 0; display: flex; padding: 5px;">
            <input style="flex-grow: 1; margin: 5px;" type="submit" class="btn btn-success" value="Створити" />
            <a style="flex-grow: 1; margin: 5px;" class="btn btn-dark" asp-action="Index">Повернутися</a>
        </div>
    </form>
</div>