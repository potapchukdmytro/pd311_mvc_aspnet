@model IEnumerable<Category>

<div style="display: flex">
    <h1>Категорії</h1>
    <div style="flex-grow: 1; text-align: end">
        <a class="btn btn-dark" asp-action="Create">Додати категорію</a>
    </div>
</div>
@if (Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <th>@category.Id</th>
                    <th>@category.Name</th>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>Категорії не знайдено</h2>
}
